<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/download1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AppDescriptionActivity"
    tools:showIn="@layout/activity_app_description">

    <ImageView
        android:id="@+id/apkDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_file_download_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/download_apk"/>

</RelativeLayout>